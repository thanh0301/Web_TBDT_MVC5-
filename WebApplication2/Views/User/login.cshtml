
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="container">

    <h2 style="text-align:center">Đăng Nhập</h2>
    <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true);
        <div class="form">
            <div class="tk">
                <label for="name">Tài khoản:</label>
                <input type="text" name="name" id="name"/>
                <p class="error">@ViewData["Loi1"]</p>
            </div>
            <div class="mk">
                <label for="pass">Mật khẩu:</label>
                <input type="password" name="pass" id="pass"/>
                <p class="error">@ViewData["Loi3"]</p>
            </div>
            @* nút đăng nhập và nút đăng ký *@
            <div class="dn_dk">
                @*<a href="#">Đăng Nhập</a>*@
                <input style="padding:10px 20px;" type="submit" value="Đăng Nhập" class="inp" />
                @* nút đăng ký sẽ nhảy qua trang đăng ký *@
                <a href="@Url.Action("signup", "User" , new { })">Đăng Ký</a>

            </div>

        </div>
    }


</div>

