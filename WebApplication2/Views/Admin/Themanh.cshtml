@model WebApplication2.Models.SANPHAM

@{
    ViewBag.Title = "Themanh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM ẢNH</h2>

@using (Html.BeginForm("Themanh", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>THÊM ẢNH</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div>Chọn ảnh</div>
        <div class="col-md-10">
            <input type="file" name="fileUpload" />
            @ViewBag.Thongbao
        </div>
    </div>

    <div class="form-group">
        <div class="@*col-md-offset-2*@ col-md-10">
            <input type="submit" value="Thêm ảnh" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Quanlianh", new { id = Model.MaSP})
</div>
